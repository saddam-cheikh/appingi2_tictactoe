<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TableLayout android:id="@+id/tableGame"
            android:layout_width="228dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:rowCount="3"
            android:columnCount="3"
            android:padding="8dp"
            android:background="@android:color/holo_purple"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9">

        <TableRow android:layout_width="217dp" android:layout_height="33dp">

            <Button android:id="@+id/b00"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button"
                    android:onClick="buttonClick"/>

            <Button
                    android:id="@+id/b01"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button" android:onClick="buttonClick"/>

            <Button
                    android:id="@+id/b02"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button" android:onClick="buttonClick"/>

        </TableRow>


        <TableRow>

            <Button
                    android:id="@+id/b10"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button"
                    android:onClick="buttonClick"/>

            <Button
                    android:id="@+id/b11"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button"
                    android:onClick="buttonClick"/>

            <Button
                    android:id="@+id/b12"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button"
                    android:onClick="buttonClick"/>

        </TableRow>

        <!--Row 3-->
        <TableRow android:layout_height="345dp" android:layout_width="wrap_content">

            <Button android:id="@+id/b20"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button" android:onClick="buttonClick"/>

            <Button android:id="@+id/b21"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button" android:onClick="buttonClick"/>

            <Button
                    android:id="@+id/b22"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="0.5dp"
                    style="@style/Widget.AppCompat.Button" android:onClick="buttonClick"/>

        </TableRow>

    </TableLayout>

    <!--TextView to show user turns and winner-->
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTurn0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tableGame" app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintVertical_bias="0.077"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tableGame" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/playerTurn0" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.039"
            app:layout_constraintVertical_bias="0.088"/>
    <TextView
            android:text=""
            android:layout_width="117dp"
            android:layout_height="26dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/playerTurn1"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline9"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline11"
            android:gravity="start"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName" android:text=""
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tableGame"
            app:layout_constraintVertical_bias="0.366"/>
    <TextView
            android:text="@string/player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTurn1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline11"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintVertical_bias="0.36" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginLeft="8dp"
            android:gravity="start"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="142dp" android:id="@+id/guideline9"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10" app:layout_constraintGuide_percent="0.76"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="82dp" android:id="@+id/guideline11"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="32dp" android:id="@+id/guideline12"/>

</android.support.constraint.ConstraintLayout>